{
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,

	"files.eol": "\n",
	"files.encoding": "utf8",
	"files.insertFinalNewline": true,

	"files.exclude": {
		"dist": false,
		"package-lock.json": false,
		"coverage": true,
		"node_modules": true,
		"*.log*": true
	},

	"search.exclude": {
		"dist": true
	},

	"files.watcherExclude": {
		"dist/**": true,
		"**/.git/**": true,
		"**/node_modules/**": true,
	},
}
